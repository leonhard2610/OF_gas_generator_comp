FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{

    "U.*"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-6;
        relTol          0.1;
    }

    UFinal
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-8;
        relTol          0.001;
    }

    // "p.*"
    // {
    //     solver          PCG;
    //     preconditioner  DIC;
    //     tolerance       1e-8;
    //     relTol          0.0;
    // }


    "p.*"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-4;
        relTol          0.01;
    }


    "(e.*)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-6;
        relTol          0.0;
    }

    "(k|epsilon).*"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-6;
        relTol          0;
    }

//back substitution
    "rho.*"
    {
        solver          diagonal;
    }

}

PIMPLE
{
    //transonic 		            yes;
    nOuterCorrectors            5;
    nCorrectors                 1;

    /*residualControl
    {
        U                       1e-5;
        p                       5e-4;
     }*/
}

relaxationFactors
{
    fields
    {
        ".*"   0.7;  // ensure diagonal equality
    }
    equations
    {
        ".*"   0.7;  // ensure diagonal equality
    }
}
